---
import { Card, Pagination } from "accessible-astro-components";
import { getCollection } from "astro:content";
import DefaultLayout from "../../layouts/DefaultLayout.astro";

export async function getStaticPaths({ paginate }) {
  const data = await getCollection("sights");
  return paginate(data, { pageSize: 6 });
}

const { page } = Astro.props;
---

<DefaultLayout
  title="Erlebenswertes"
  description="Liste der Erlebnisse in und rund um Köln"
>
  <section class="my-12">
    <div class="space-content container">
      <h1>Erlebenswertes</h1>
      <p class="text-2xl">Liste der Erlebnisse in und rund um Köln.</p>
    </div>
  </section>
  <section class="my-12">
    <div class="container">
      <p class="text-sm">
        <em>{page.start + 1} bis {page.end + 1} von {page.total} Erlebnissen</em
        >
      </p>
      <ul class="my-3">
        {
          page.data.map((post) => (
            <li>
              <Card
                img={post.data.image.url}
                url={"/erlebenswertes/" + post.slug}
                title={post.data.title}
                footer={"tags:" + post.data.tags}
              >
                {post.data.description}
              </Card>
            </li>
          ))
        }
      </ul>
      <div class="mt-12 grid place-content-center">
        <Pagination
          firstPage={page.url.prev ? "/erlebenswertes" : null}
          previousPage={page.url.prev ? page.url.prev : null}
          nextPage={page.url.next ? page.url.next : null}
          lastPage={page.url.next
            ? `/erlebenswertes/${Math.round(page.total / page.size)}`
            : null}
          currentPage={page.currentPage}
          totalPages={Math.round(page.total / page.size)}
        />
      </div>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 4rem;

    @media (min-width: 550px) {
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 2rem;
    }

    @media (min-width: 950px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
